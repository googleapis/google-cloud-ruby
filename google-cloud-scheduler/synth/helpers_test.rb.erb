require "minitest/autorun"
require "minitest/spec"

require "google/gax"

require "google/cloud/scheduler"
require "google/cloud/scheduler/<%= version %>/helpers"

require "google/cloud/scheduler/<%= version %>/cloud_scheduler_client"

class MockSchedulerCredentials_<%= version %> < Google::Cloud::Scheduler::<%= version.capitalize %>::Credentials
  def initialize
  end

  def updater_proc
    proc do
      raise "The client was trying to make a grpc request. This should not " \
          "happen since the grpc layer is being mocked."
    end
  end
end

describe Google::Cloud::Scheduler::<%= version.capitalize %>::CloudSchedulerClient do
  let(:mock_credentials) { MockSchedulerCredentials_<%= version %>.new }

<%= 
  describe_block = []
  class_methods.each do |method_name| 
    describe_block += ["describe \"the #{method_name} instance method\" do"]

    describe_block += [
      "  it \"correctly calls Google::Cloud::Scheduler::#{version.capitalize}::CloudSchedulerClient.#{method_name}\" do",
      "    Google::Cloud::Scheduler::#{version.capitalize}::Credentials.stub(:default, mock_credentials) do",
      "      num_args = Google::Cloud::Scheduler::#{version.capitalize}::CloudSchedulerClient.method(\"#{method_name}\").arity",
      "      client = Google::Cloud::Scheduler.new version: :#{version}",
      "      args = (0...num_args).map { \"argument\" }",
      "      assert_equal(",
      "        client.#{method_name}(*args),",
      "        Google::Cloud::Scheduler::#{version.capitalize}::CloudSchedulerClient.#{method_name}(*args)",
      "      )",
      "    end",
      "  end",
      "end",
      ""
    ]
  end
  describe_block.map { |line| "  " + line unless line.size == 0 }.join("\n")[0...-1]
%>
end
